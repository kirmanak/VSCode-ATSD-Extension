{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Axibase Charts",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "storage.type.section.axibase.charts",
					"match": "\\[[a-z]+\\]"
				},
				{
					"name": "string.axibase.charts",
					"match": "([`'\"]).+?\\1"
				},
				{
					"name": "comment.block.axibase.charts",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.number-sign.axibase.charts",
					"match": "^[ \t]*#.*"
				},
				{
					"name": "constant.language.axibase.charts",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.axibase.charts",
					"match": "\\b[0-9]+\\b"
				},
				{
					"begin": "@{",
					"end": "}",
					"name": "variable.other.axibase.charts",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"begin": "(\\b(value|script|replace-?value|on-?series-?click)(?=[ \\t]*=))|options[ \\t]*=[ \\t]*javascript:",
					"end": "\\n",
					"name": "entity.name.tag.axibase.charts",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"name": "entity.name.tag.axibase.charts",
					"match": "\\b\\w[-\\w\\d_]+?(?=\\s*=)"
				},
				{
					"begin": "\\bvar[ \\t]*\\S+[ \\t]*(?=[ \\t]*=)",
					"end": "(?=\\n)",
					"name": "keyword.control.axibase.charts",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"begin": "\\bscript\\b",
					"end": "\\bendscript\\b",
					"name": "keyword.control.axibase.charts",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"name": "keyword.control.axibase.charts",
					"match": "\\b(import|csv|endcsv|endvar|for|endfor|in|list|endlist|if|elseif|else|endif)\\b"
				}
			]
		}
	},
	"scopeName": "source.axibase.charts"
}