{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ATSD Visualization",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "entity.name.class",
					"match": "\\[[a-z]+\\]"
				},
				{
					"name": "keyword.control",
					"match": "\\b(csv|endcsv|endvar|script|endscript|for|endfor|in|list|endlist|var|if|elseif|else|endif)\\b"
				},
				{
					"name": "entity.name.function",
					"match": "\\w[\\w\\d]+(?=\\(.*?\\))"
				},
				{
					"name": "support.variable",
					"match": "@\\{.+?\\}"
				},
				{
					"name": "string.quoted",
					"match": "(['\"]).+?\\1"
				},
				{
					"name": "keyword.operator",
					"match": "->|="
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				},
				{
					"name": "comment.line.number-sign",
					"match": "^[ \t]*#.*"
				}, 
				{
					"name": "variable.name",
					"match": "\\b\\w[-\\w\\d_]+?(?=\\s*=)"
				},
				{
					"name":"constant.regexp",
					"match": "\\b([0-9]+|true|false)\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\b[0-9]+\\b"
				}
			]
		}
	},
	"scopeName": "source.av"
}
